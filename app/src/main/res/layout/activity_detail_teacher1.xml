<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teacher_info.DetailTeacher1.DetailTeacher1">

    <Button
        android:id="@+id/back"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/back"
        android:text="Profile"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:textAlignment="textStart"
        app:iconPadding="15dp" />

    <ImageView
        android:id="@+id/img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/back"
        android:src="@drawable/baseline_person_24"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/circle_shape"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ha Nguyen Hoang"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/img"
        android:gravity="center"/>

    <TextView
        android:id="@+id/place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hanoi, Viet Nam"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/name"
        android:layout_centerInParent="true"
        android:drawableLeft="@drawable/place_ic"/>

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:layout_below="@id/place"
        android:textSize="21sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/email_tit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="30dp"
        android:layout_below="@id/contact"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nguyen-hoang.ha@usth.edu.vn"
        android:autoLink="web"
        android:layout_below="@id/email_tit"
        android:textSize="21sp"
        android:textColor="#2196F3"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/city_tit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City/town"
        android:layout_marginTop="30dp"
        android:layout_below="@id/email"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hanoi"
        android:layout_below="@id/city_tit"
        android:textSize="21sp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/country_tit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country"
        android:layout_marginTop="30dp"
        android:layout_below="@id/city"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Viet Nam"
        android:layout_below="@id/country_tit"
        android:textSize="21sp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/user_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User details"
        android:layout_marginTop="30dp"
        android:layout_below="@id/country"
        android:textSize="21sp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/webpage_tit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Web page"
        android:layout_marginTop="30dp"
        android:layout_below="@id/user_details"
        android:textSize="21sp"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/loadWebsiteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/webpage_tit"
        android:textSize="21sp"
        android:text="http://nguyenhoangha.net"
        android:textColor="#2196F3"
        android:layout_marginLeft="15dp"/>


</RelativeLayout>