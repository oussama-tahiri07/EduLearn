<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Courses.MobileApp.dashboardMobileApp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp">

    <Button
        android:id="@+id/back"
        style="@android:style/Widget.DeviceDefault.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/back"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"/>
    <TextView
        android:id="@+id/textView"
        android:drawableLeft="@drawable/ic_file"
        android:layout_below="@id/back"
        android:drawablePadding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Course Introduction"
        android:padding="15dp"
        android:textColor="#423D3D"
        android:textSize="24sp"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:text="Type"
        android:layout_marginStart="10dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:text="PDF document"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:text="Size"
        android:layout_marginStart="10dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:text="754.4KB"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:text="Created"
        android:layout_marginStart="10dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:text="Friday, 12 October 2018, 10:15 PM"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:text="Last Modified"
        android:layout_marginStart="10dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:text="Friday, 12 October 2023, 9:15 AM"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/open_btn"
        style="@style/Widget.Material3.MaterialTimePicker.Button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_file_open"
        android:backgroundTint="@color/dark_orange"
        android:text="OPEN"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:paddingStart="145dp"
        android:paddingEnd="145dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"/>


</RelativeLayout>